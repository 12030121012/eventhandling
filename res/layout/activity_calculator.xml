<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Calculator" >

    <EditText
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10" android:inputType="none"
        android:editable="false"/>

    <Button
        android:id="@+id/n7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/screen"
        android:layout_marginTop="26dp"
        android:text="7" />

    <Button
        android:id="@+id/n8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/n7"
        android:layout_toRightOf="@+id/n7"
        android:text="8" />

    <Button
        android:id="@+id/n9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/n8"
        android:layout_toRightOf="@+id/n8"
        android:text="9" />

    <Button
        android:id="@+id/divide"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/n9"
        android:layout_toRightOf="@+id/n9"
        android:text="/" />

    <Button
        android:id="@+id/n4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/n7"
        android:layout_below="@+id/n7"
        android:layout_marginTop="14dp"
        android:text="4" />

    <Button
        android:id="@+id/n1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1" />

    <Button
        android:id="@+id/n5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/n4"
        android:layout_alignBottom="@+id/n4"
        android:layout_toLeftOf="@+id/n9"
        android:text="5" />

    <Button
        android:id="@+id/multiply"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/n5"
        android:layout_alignBottom="@+id/n5"
        android:layout_toRightOf="@+id/n9"
        android:text="*" />

    <Button
        android:id="@+id/n6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/multiply"
        android:layout_alignBottom="@+id/multiply"
        android:layout_toLeftOf="@+id/multiply"
        android:text="6" />

    <Button
        android:id="@+id/n3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/n2"
        android:layout_alignBottom="@+id/n2"
        android:layout_toRightOf="@+id/n2"
        android:text="3" />

    <Button
        android:id="@+id/equal"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/n1"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/multiply"
        android:text="=" />

    <Button
        android:id="@+id/n2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/equal"
        android:layout_toLeftOf="@+id/equal"
        android:text="2" />

    <Button
        android:id="@+id/addition"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/equal"
        android:layout_alignLeft="@+id/multiply"
        android:text="+" />

    <Button
        android:id="@+id/n0"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/equal"
        android:layout_alignBottom="@+id/equal"
        android:layout_toLeftOf="@+id/equal"
        android:text="0" />

    <Button
        android:id="@+id/dot"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/n0"
        android:layout_alignBottom="@+id/n0"
        android:layout_alignLeft="@+id/n1"
        android:text="." />

    <Button
        android:id="@+id/subtract"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/equal"
        android:layout_alignBottom="@+id/equal"
        android:layout_alignLeft="@+id/addition"
        android:text="-" />

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dot"
        android:layout_alignRight="@+id/subtract"
        android:layout_below="@+id/n0"
        android:layout_marginTop="20dp"
        android:text="Clear" />

</RelativeLayout>
